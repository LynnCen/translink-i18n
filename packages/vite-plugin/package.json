{
  "name": "@translink/vite-plugin-i18n",
  "version": "1.0.0",
  "description": "Vite plugin for TransLink I18n with hot reload and build optimization",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "vite",
    "plugin",
    "i18n",
    "internationalization",
    "vue",
    "react",
    "hmr",
    "hot-reload"
  ],
  "author": "lynncen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lynncen/translink-i18n.git",
    "directory": "packages/vite-plugin"
  },
  "peerDependencies": {
    "vite": "^4.0.0 || ^5.0.0"
  },
  "dependencies": {
    "@translink/i18n-cli": "workspace:*",
    "gogocode": "^1.0.55",
    "fast-glob": "^3.3.2",
    "chokidar": "^3.5.3",
    "picocolors": "^1.0.0",
    "magic-string": "^0.30.5"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "tsup": "^8.0.1",
    "vitest": "^1.0.4",
    "vite": "^5.0.0",
    "@types/node": "^20.8.0"
  }
}